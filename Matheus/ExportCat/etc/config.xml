<?xml version="1.0"?>
<config>
<modules>
	<Matheus_ExportCat>
	<version>0.1.0</version>
	</Matheus_ExportCat>
</modules>

<global>
        <helpers>
            <matheus_exportcat>
                <class>Matheus_ExportCat_Helper</class>
            </matheus_exportcat>
        </helpers>
        <blocks>
            <matheus_exportcat>
                <class>Matheus_ExportCat_Block</class>
            </matheus_exportcat>
        </blocks>
</global>

<admin>
        <routers>
            <exportcat_admin>
            <use>admin</use>
                <args>
                    <module>Matheus_ExportCat</module>
                    <frontName>export_categories</frontName>
                </args>
            </exportcat_admin>
        </routers>
    </admin>

</config>
